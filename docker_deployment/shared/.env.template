# Environment template for Kiro Project
# This file contains placeholders that will be replaced by deployment scripts

# Source folder to monitor for new files
SOURCE_FOLDER={{SOURCE_FOLDER}}

# Destination folder for successfully processed files  
SAVED_FOLDER={{SAVED_FOLDER}}

# Destination folder for files that failed processing
ERROR_FOLDER={{ERROR_FOLDER}}

# Document processing configuration
ENABLE_DOCUMENT_PROCESSING=true
DOCUMENT_PROCESSOR_TYPE=rag_store
MODEL_VENDOR={{MODEL_VENDOR}}

# API Keys (injected by deployment scripts)
OPENAI_API_KEY={{OPENAI_API_KEY}}
GOOGLE_API_KEY={{GOOGLE_API_KEY}}

# File monitoring configuration for Docker volumes
FILE_MONITORING_MODE={{FILE_MONITORING_MODE}}
POLLING_INTERVAL={{POLLING_INTERVAL}}
DOCKER_VOLUME_MODE={{DOCKER_VOLUME_MODE}}

# ChromaDB Configuration (replaced by deployment scripts)
CHROMA_CLIENT_MODE={{CHROMA_CLIENT_MODE}}
CHROMA_DB_PATH=
CHROMA_SERVER_HOST={{CHROMA_SERVER_HOST}}
CHROMA_SERVER_PORT={{CHROMA_SERVER_PORT}}
CHROMA_COLLECTION_NAME={{CHROMA_COLLECTION_NAME}}