OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Optional - File monitoring configuration for Docker volumes
FILE_MONITORING_MODE=auto  # auto, events, polling
POLLING_INTERVAL=3.0       # seconds (for polling mode)
DOCKER_VOLUME_MODE=false   # Docker volume optimizations

# Chroma Cloud db settings
CHROMA_API_KEY=your_chroma_api_key_here
CHROMA_TENANT_ID=your_chroma_tenant_id_here
CHROMA_DATABASE_NAME=rag-kb

# OCR Investigation (set to true to write OCR results to temporary files for debugging)
OCR_INVESTIGATE=false
# Directory to write OCR investigation files (default: ./ocr_debug)
OCR_INVESTIGATE_DIR=./ocr_debug